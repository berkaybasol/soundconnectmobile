<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- HTTP istekleri ve genel ağ erişimi için -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:label="soundconnectmobile"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Flutter UI init edilirken görünen tema -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <!-- App launcher -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- CUSTOM SCHEME: soundconnect://verify-email?token=XYZ -->
            <intent-filter android:autoVerify="false">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data
                    android:scheme="soundconnect"
                    android:host="verify-email" />
            </intent-filter>

            <!-- HTTPS: https://soundconnect.app/verify-email?token=XYZ -->
            <intent-filter android:autoVerify="false">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="soundconnect.app"
                    android:path="/verify-email" />
            </intent-filter>

        </activity>

        <!-- Flutter tool için gerekli -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- PROCESS_TEXT izin görünürlüğü (Flutter engine için) -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>
</manifest>
